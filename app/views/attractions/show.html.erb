<h1><%= @attraction.name %></h1>
<p>Tickets: <%=  @attraction.tickets %></p>
<p>Nausea_rating: <%=  @attraction.nausea_rating %></p>
<p>Happiness_rating<%=  @attraction.happiness_rating %></p>
<p>Min_height<%=  @attraction.min_height %></p>

<% if current_user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path %>
<% else %>
  <%= form_tag(take_attraction_path(@attraction)) do %>
    <%= hidden_field_tag :attraction_id, @attraction.id %>
    <%= submit_tag "Go on this ride", class: "btn" %>
  <% end %>
<% end %>
